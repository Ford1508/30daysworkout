<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExerciseDetailsActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_content_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Khởi động"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/img_details"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E6E6FA"/>
    <TextView
        android:id="@+id/txt_timer_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="30s"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/txt_describe_details"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="Mo ta"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageButton
            android:id="@+id/img_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_left_24"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />
        <ImageButton
            android:id="@+id/img_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_right_24"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>